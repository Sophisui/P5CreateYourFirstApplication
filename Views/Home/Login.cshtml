@model P5CreateYourFirstApplication.Models.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
}

<link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Libre Baskerville', serif;
        color: #3b2b1a;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        text-align: center;
        width: 340px;
    }

        .login-container h1 {
            font-size: 28px;
            font-weight: 700;
            color: #3b2b1a;
            margin-bottom: 50px;
        }

    form {
        display: flex;
        flex-direction: column;
        gap: 25px;
        text-align: left;
    }

    label {
        font-size: 14px;
        margin-bottom: 6px;
        display: block;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #bbb;
        border-radius: 3px;
        font-family: 'Libre Baskerville', serif;
        font-size: 14px;
        color: #3b2b1a;
    }

    .buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-top: 10px;
    }

    .btn-gold {
        background-color: #d19b5a;
        color: white;
        border: none;
        padding: 8px 18px;
        border-radius: 4px;
        font-family: 'Libre Baskerville', serif;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.2s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-gold:hover {
            background-color: #b47d3c;
        }

    .separator {
        font-size: 14px;
        color: #3b2b1a;
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <h1>Express Voitures</h1>

        <form asp-action="Login" method="post">
            <div>
                <label asp-for="Email">Adresse email</label>
                <input asp-for="Email" type="email" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Password">Mot de passe</label>
                <input asp-for="Password" type="password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="buttons">
                <button type="submit" class="btn-gold">Se connecter</button>
                <span class="separator">ou</span>
                <a asp-action="Register" class="btn-gold">S'inscrire</a>
            </div>
        </form>
    </div>
</div>
