@model P5CreateYourFirstApplication.Models.VoitureViewModel

<style>
    .add-voiture-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: 'Poppins', serif;
        margin-top: 40px;
        margin-bottom: 60px;
        padding-bottom: 40px;
    }

    .add-voiture-title {
        font-style: italic;
        color: #7B5A3A;
    }

    .add-voiture-subtitle {
        font-size: 12px;
        color: #7B5A3A;
    }

    .add-voiture-form {
        background-color: white;
        border-radius: 15px;
        padding: 40px 50px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 320px;
    }

        .add-voiture-form .form-group {
            margin-bottom: 15px;
        }

        .add-voiture-form label {
            color: #4b3c2b;
        }

        .add-voiture-form .form-control {
            width: 100%;
            border: 1px solid #4b3c2b;
            border-radius: 3px;
            height: 30px;
        }

    .visuel-upload-container {
        border: 1px solid #4b3c2b;
        border-radius: 3px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .visuel-upload-label {
        cursor: pointer;
        text-align: center;
        color: #999;
    }

    .visuel-upload-icon {
        border: 1px solid #999;
        border-radius: 5px;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
    }

    .visuel-input-hidden {
        display: none;
    }

    .submit-button {
        background-color: #D09C47;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: block;
        margin: 0 auto;
        width: 100%;
    }

        .submit-button:hover {
            background-color: #b8853d;
        }

    .form-group-visuel {
        margin-bottom: 25px;
    }
</style>

<div class="add-voiture-container">
    <h2 class="add-voiture-title">Ajouter une voiture</h2>
    <p class="add-voiture-subtitle">tous les champs sont obligatoires</p>

    <form asp-action="AddVoiture" method="post" enctype="multipart/form-data" class="add-voiture-form">
        <div class="form-group">
            <label asp-for="CodeVin">CodeVin</label>
            <input asp-for="CodeVin" class="form-control" />
            <span asp-validation-for="CodeVin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PrixAchat">Prix d'achat</label>
            <input asp-for="PrixAchat" class="form-control" />
            <span asp-validation-for="PrixAchat" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Couleur">Couleur</label>
            <input asp-for="Couleur" class="form-control" />
            <span asp-validation-for="Couleur" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Annee">Année</label>
            <input asp-for="Annee" type="date" class="form-control" />
            <span asp-validation-for="Annee" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdMarque">Marque</label>
            <select asp-for="IdMarque" class="form-control">
                <option value="">-- Sélectionnez une Marque --</option>
                @foreach (var Marque in Model.Marques)
                {
                    <option value="@Marque.Id">@Marque.NomMarque</option>
                }
            </select>
            <span asp-validation-for="IdMarque" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdModele">Modèle</label>
            <select asp-for="IdModele" class="form-control">
                <option value="">-- Sélectionnez un Modèle --</option>
                @foreach (var Modele in Model.Modeles)
                {
                    <option value="@Modele.Id">@Modele.NomModele</option>
                }
            </select>
            <span asp-validation-for="IdModele" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdFinition">Finition</label>
            <select asp-for="IdFinition" class="form-control">
                <option value="">-- Sélectionnez une Finition --</option>
                @foreach (var Finition in Model.Finitions)
                {
                    <option value="@Finition.Id">@Finition.NomFinition</option>
                }
            </select>
            <span asp-validation-for="IdFinition" class="text-danger"></span>
        </div>

        <div class="form-group form-group-visuel">
            <label asp-for="Visuel">Visuel</label>
            <div class="visuel-upload-container">
                <label for="Visuel" class="visuel-upload-label">
                    <div class="visuel-upload-icon">+</div>
                    <div>Ajoutez une image</div>
                </label>
                <input asp-for="Visuel" name="photo" type="file" id="Visuel" class="visuel-input-hidden" />
            </div>
            <span asp-validation-for="Visuel" class="text-danger"></span>
        </div>

        <button type="submit" class="submit-button">
            Publier
        </button>
    </form>
</div>